{
  "include": [
    "src/**/*ts",
    "src/**/*tsx"
  ],
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "target": "es2018",
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "strict": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules"
  ]
}
